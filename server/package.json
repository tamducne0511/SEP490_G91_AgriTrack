{
  "name": "nongtraiapi",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest --testPathPattern=tests/unit",
    "test:all": "jest",
    "test:watch": "jest --testPathPattern=tests/unit --watch",
    "test:coverage": "jest --testPathPattern=tests/unit --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:unit:watch": "jest --testPathPattern=tests/unit --watch",
    "test:unit:coverage": "jest --testPathPattern=tests/unit --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:integration:watch": "jest --testPathPattern=tests/integration --watch",
    "test:integration:coverage": "jest --testPathPattern=tests/integration --coverage",
    "test:integration:auth": "jest tests/integration/routes/auth.integration.test.js",
    "test:integration:farm": "jest tests/integration/routes/farm.integration.test.js",
    "test:integration:task": "jest tests/integration/routes/task.integration.test.js",
    "test:integration:equipment": "jest tests/integration/routes/equipment.integration.test.js",
    "test:integration:notification": "jest tests/integration/routes/notification.integration.test.js",
    "test:integration:user": "jest tests/integration/routes/user.integration.test.js",
    "test:runner": "node tests/integration/test-runner.js",
    "start": "node app.js",
    "dev": "nodemon app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "multer": "^2.0.1",
    "openai": "^5.5.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "services/**/*.js",
      "middlewares/**/*.js",
      "utils/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "verbose": true
  }
}
